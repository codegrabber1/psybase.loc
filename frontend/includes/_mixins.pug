//menu
-var menuItem = ["Бібліотека", "Psychological centers", "Practice Psychologist", "Blog"]
-var menuSubItem = ["Item1", "Item2", "Item3"]
-var menuSubItem2 = ["Item1", "Item2", "Item3"]
mixin menu(items)
  ul.sf-menu
    each item in menuItem
      if item == menuItem[2]
        li: a(href="#") #{item}
          ul
            each item in menuSubItem
              li: a(href="#") #{item}
      else if item == menuItem[3]
        li: a(href="#") #{item}
          ul
            each item in menuSubItem
              li: a(href="#") #{item}
      else
        li: a(href="#") #{item}
// lang
mixin lang
    .ui.floating.dropdown.labeled.icon
        i(class="fa fa-language", aria-hidden="true")
        span.text
            | Select Language
        .menu
            .item
                | English
            .item
                | French
            .item
                | German
            .item
                | Hungarian
            .item
                | Polish
            .item
                | Ukraine

// register block
mixin top_menu()
  ul
